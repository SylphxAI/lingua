{
	"name": "@sylphx/lingua-react",
	"version": "0.1.0",
	"description": "React bindings for @sylphx/lingua",
	"license": "MIT",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": ["dist"],
	"scripts": {
		"build": "bunup src/index.tsx --dts --external react --external @sylphx/lingua",
		"dev": "bunup src/index.tsx --dts --external react --external @sylphx/lingua --watch",
		"typecheck": "tsc --noEmit",
		"clean": "rm -rf dist"
	},
	"peerDependencies": {
		"@sylphx/lingua": ">=0.1.0",
		"react": "^18.0.0 || ^19.0.0"
	},
	"devDependencies": {
		"@types/react": "^19",
		"bunup": "^0.10.0",
		"react": "^19.0.0",
		"typescript": "^5"
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/SylphxAI/lingua.git",
		"directory": "packages/lingua-react"
	},
	"homepage": "https://github.com/SylphxAI/lingua#readme",
	"bugs": {
		"url": "https://github.com/SylphxAI/lingua/issues"
	},
	"keywords": ["i18n", "react", "translation", "lingua", "hooks", "provider"]
}
